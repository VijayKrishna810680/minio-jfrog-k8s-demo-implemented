version: '3.8'
services:
  minio:
    image: quay.io/minio/minio:latest
    command: server /data --console-address ":9001"
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      MINIO_ROOT_USER: minioadmin
      MINIO_ROOT_PASSWORD: minioadmin123
    volumes:
      - minio-data:/data

  app:
    build: ./app
    ports:
      - "8081:80"
    environment:
      MINIO_ENDPOINT: http://minio:9000
      MINIO_BUCKET: demo-bucket
      MINIO_ACCESS_KEY: minioadmin
      MINIO_SECRET_KEY: minioadmin123
    depends_on:
      - minio

  ai-dashboard:
    build: ./dashboard
    ports:
      - "8080:8080"
    environment:
      MINIO_ENDPOINT: http://minio:9000
      MINIO_BUCKET: demo-bucket
      MINIO_ACCESS_KEY: minioadmin
      MINIO_SECRET_KEY: minioadmin123
    depends_on:
      - minio

  monitoring:
    build: ./monitoring
    ports:
      - "9090:9090"

  plugin-manager:
    build: ./plugins
    ports:
      - "8181:8181"

volumes:
  minio-data:
